@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Editor de Empresas</h2>
<table cellspacing="10">
    <tr>
        <td id="empresa_link"><a>Empresa</a></td>
        <td id="cargo_link"><a>Cargo</a></td>
    </tr>
</table>

<div class="container">
    <div class="contenido" id="Empresa">
        <h2>Peliculas</h2>
        <div>
            <p>Dentro de este div se van a listar todas las peliculas existentes y se hara su create</p>
        </div>
    </div>
    <div id="agregarempresa" class="contenido" style="display: none">
        @Html.Partial("_Empresa")
    </div>
    <div id="cargoempresa" class="contenido" style="display: none">
        @Html.Partial("_CargoEmpresa")
    </div>

</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#empresa_link").click(function () {
            $(".contenido").hide();
            $("#agregarempresa").fadeIn();
        })
        $("#cargo_link").click(function () {
            $(".contenido").hide();
            $("#cargoempresa").fadeIn();
        })

    });

</script>
